{
  "name": "master",
  "version": "0.0.1",
  "description": "AIO FULL STACK STARTER",
  "author": "江郎",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "cross-env NODE_ENV=production node dist/apps/master/main",
    "dev:master": "nest start --watch",
    "dev:platform": "nest start platform --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pnpm build && pnpm start",
    "start:repl": "node --watch -r @swc-node/register ./apps/master/src/utils/repl",
    "swagger": "node -r @swc-node/register ./apps/master/src/utils/swagger",
    "preinstall": "npx only-allow pnpm",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/master/test/jest-e2e.json"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.635.0",
    "@aws-sdk/client-ssm": "^3.635.0",
    "@fastify/helmet": "^11.1.1",
    "@grpc/grpc-js": "^1.11.1",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/graphql": "^12.2.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-fastify": "^10.4.1",
    "@nestjs/swagger": "^7.4.0",
    "@nestjs/typeorm": "^10.0.2",
    "accept-language-parser": "^1.5.0",
    "argon2": "^0.40.3",
    "axios": "^1.7.4",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "concurrently": "^8.2.2",
    "cookie": "^0.6.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.33.0",
    "fastify": "^4.28.1",
    "fs-extra": "^11.2.0",
    "hbs": "^4.2.0",
    "isISO8601": "link:validator/lib/isISO8601",
    "iterare": "^1.2.1",
    "joi": "^17.13.3",
    "js-yaml": "^4.1.0",
    "mergician": "^2.0.2",
    "nanoid": "^5.0.7",
    "nest-typed-config": "^2.9.3",
    "nestjs-cls": "^4.4.1",
    "nestjs-paginate": "^9.0.1",
    "nestjs-pino": "^4.1.0",
    "passport-jwt": "^4.0.1",
    "pino": "^9.3.2",
    "pino-http": "^10.2.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "string-format": "^2.0.0",
    "typeorm": "^0.3.20",
    "typeorm-naming-strategies": "^4.1.0",
    "typeorm-transactional": "^0.5.0",
    "validator": "^13.12.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.14",
    "@types/hbs": "^4.0.4",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.16.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.0",
    "@types/validator": "^13.12.1",
    "@types/yargs": "^17.0.33",
    "jest": "^29.5.0",
    "pino-pretty": "^11.2.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@ifc-drizzle/node-postgres(|/.*)$": "<rootDir>/libs/node-postgres/src/$1",
      "^@ifc-drizzle/data-modeling(|/.*)$": "<rootDir>/libs/data-modeling/src/$1",
      "^@ifc/configify(|/.*)$": "<rootDir>/libs/configify/src/$1",
      "^@ifckit/bootstrap(|/.*)$": "<rootDir>/libs/bootstrap/src/$1",
      "^@ifckit/config(|/.*)$": "<rootDir>/libs/config/src/$1",
      "^@ifckit/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@ifckit/validation(|/.*)$": "<rootDir>/libs/validation/src/$1",
      "^@ifckit/crypto(|/.*)$": "<rootDir>/libs/crypto/src/$1",
      "^@ifckit/server-http-client(|/.*)$": "<rootDir>/libs/server-http-client/src/$1",
      "^@ifckit/utils(|/.*)$": "<rootDir>/libs/utils/src/$1",
      "^@ifckit/exceptions(|/.*)$": "<rootDir>/libs/exceptions/src/$1",
      "^@ifckit/i18n(|/.*)$": "<rootDir>/libs/i18n/src/$1",
      "^@ifckit/typeorm(|/.*)$": "<rootDir>/libs/typeorm/src/$1",
      "^@ifckit/persistence-api(|/.*)$": "<rootDir>/libs/persistence-api/src/$1",
      "^@ifckit/common-types(|/.*)$": "<rootDir>/libs/common-types/src/$1",
      "^@ifckit/string-utils(|/.*)$": "<rootDir>/libs/string-utils/src/$1",
      "^@ifckit/auth(|/.*)$": "<rootDir>/libs/auth/src/$1"
    }
  }
}