{
  "name": "master",
  "version": "0.0.1",
  "description": "AIO FULL STACK STARTER",
  "author": "江郎",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "start": "cross-env NODE_ENV=production node dist/apps/master/main",
    "dev:master": "nest start --watch",
    "dev:reader": "nest start reader --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pnpm build && pnpm start",
    "start:repl": "node --watch -r @swc-node/register ./apps/master/src/utils/repl",
    "swagger": "node -r @swc-node/register ./apps/master/src/utils/swagger",
    "preinstall": "npx only-allow pnpm",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/master/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-fastify": "^10.4.1",
    "@nestjs/swagger": "^7.4.0",
    "axios": "^1.7.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cross-env": "^7.0.3",
    "drizzle-orm": "^0.33.0",
    "fastify": "^4.28.1",
    "joi": "^17.13.3",
    "nestjs-pino": "^4.1.0",
    "pino": "^9.3.2",
    "pino-http": "^10.2.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@swc-node/register": "^1.10.9",
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.14",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.16.1",
    "@types/supertest": "^6.0.0",
    "jest": "^29.5.0",
    "pino-pretty": "^11.2.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@ifc-drizzle/node-postgres(|/.*)$": "<rootDir>/libs/node-postgres/src/$1",
      "^@ifc-drizzle/data-modeling(|/.*)$": "<rootDir>/libs/data-modeling/src/$1",
      "^@ifc/configify(|/.*)$": "<rootDir>/libs/configify/src/$1"
    }
  }
}