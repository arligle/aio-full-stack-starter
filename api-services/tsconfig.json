{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "@/api-services/*": [
        "./*"
      ],
      "@/master/*": [
        "apps/master/src/*"
      ],
      "@/platform/*": [
        "apps/platform/src/*"
      ],
      "@ifc-drizzle/node-postgres": [
        "libs/node-postgres/src"
      ],
      "@ifc-drizzle/node-postgres/*": [
        "libs/node-postgres/src/*"
      ],
      "@ifc-drizzle/data-modeling": [
        "libs/data-modeling/src"
      ],
      "@ifc-drizzle/data-modeling/*": [
        "libs/data-modeling/src/*"
      ],
      "@ifc/configify": [
        "libs/configify/src"
      ],
      "@ifc/configify/*": [
        "libs/configify/src/*"
      ],
      "@ifckit/bootstrap": [
        "libs/bootstrap/src"
      ],
      "@ifckit/bootstrap/*": [
        "libs/bootstrap/src/*"
      ],
      "@ifckit/config": [
        "libs/config/src"
      ],
      "@ifckit/config/*": [
        "libs/config/src/*"
      ],
      "@ifckit/logger": [
        "libs/logger/src"
      ],
      "@ifckit/logger/*": [
        "libs/logger/src/*"
      ],
      "@ifckit/validation": [
        "libs/validation/src"
      ],
      "@ifckit/validation/*": [
        "libs/validation/src/*"
      ],
      "@ifckit/crypto": [
        "libs/crypto/src"
      ],
      "@ifckit/crypto/*": [
        "libs/crypto/src/*"
      ],
      "@ifckit/server-http-client": [
        "libs/server-http-client/src"
      ],
      "@ifckit/server-http-client/*": [
        "libs/server-http-client/src/*"
      ],
      "@ifckit/utils": [
        "libs/utils/src"
      ],
      "@ifckit/utils/*": [
        "libs/utils/src/*"
      ],
      "@ifckit/exceptions": [
        "libs/exceptions/src"
      ],
      "@ifckit/exceptions/*": [
        "libs/exceptions/src/*"
      ],
      "@ifckit/i18n": [
        "libs/i18n/src"
      ],
      "@ifckit/i18n/*": [
        "libs/i18n/src/*"
      ],
      "@ifckit/typeorm": [
        "libs/typeorm/src"
      ],
      "@ifckit/typeorm/*": [
        "libs/typeorm/src/*"
      ],
      "@ifckit/persistence-api": [
        "libs/persistence-api/src"
      ],
      "@ifckit/persistence-api/*": [
        "libs/persistence-api/src/*"
      ],
      "@ifckit/common-types": [
        "libs/common-types/src"
      ],
      "@ifckit/common-types/*": [
        "libs/common-types/src/*"
      ],
      "@ifckit/string-utils": [
        "libs/string-utils/src"
      ],
      "@ifckit/string-utils/*": [
        "libs/string-utils/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "**/*spec.ts"
  ]
}